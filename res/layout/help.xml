<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#616681"
    android:gravity="center_horizontal">
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="英雄联盟英雄版顺序"
        android:textSize="18sp"
        android:gravity="center"
        android:textColor="#ffffff"
        android:layout_marginTop="40dip"/>
    <LinearLayout 
        android:layout_marginTop="10dip"
        android:layout_width="match_parent"
        android:layout_height="100dip"
        android:orientation="horizontal"
        android:gravity="center_horizontal|center_vertical">
        <ImageView 
            android:id="@+id/hero_arrow_left"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:scaleType="fitXY"
            android:src="@drawable/arrow_left"/>
	    <ViewFlipper 
	        android:id="@+id/lol_hero_list"
	        android:layout_width="100dip"
	        android:layout_height="match_parent"
	        android:layout_marginLeft="20dip"
	        android:layout_marginRight="20dip">
	    </ViewFlipper>
	    <ImageView 
	        android:id="@+id/hero_arrow_right"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:scaleType="fitXY"
            android:src="@drawable/arrow_right"/>
    </LinearLayout>
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="英雄联盟装备版顺序"
        android:textSize="18sp"
        android:gravity="center"
        android:textColor="#ffffff"
        android:layout_marginTop="30dip"/>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_marginTop="10dip"
        android:layout_height="100dip"
        android:orientation="horizontal"
        android:gravity="center_horizontal|center_vertical">
        <ImageView 
            android:id="@+id/zhuangbei_arrow_left"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:src="@drawable/arrow_left"/>
	    <ViewFlipper 
	        android:id="@+id/lol_zhuangbei_list"
	        android:layout_width="100dip"
	        android:layout_height="match_parent"
	        android:layout_marginLeft="20dip"
	        android:layout_marginRight="20dip">
	    </ViewFlipper>
	    <ImageView 
	        android:id="@+id/zhuangbei_arrow_right"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:src="@drawable/arrow_right"/>
    </LinearLayout>
    <TextView 
        android:layout_marginTop="30dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#FFD200"
        android:textSize="18sp"
        android:text="关于作者:(阳光小强)"/>
    <TextView 
        android:layout_marginTop="15dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#FF4800"
        android:text="http://blog.csdn.net/dawanganban"/>
    <TextView 
        android:layout_marginTop="10dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#FF4800"
        android:text="QQ群：142979499"/>
</LinearLayout>
